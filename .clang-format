---
Language:        Cpp
BasedOnStyle:    LLVM  # Alternatives: LLVM, Mozilla, WebKit, Chromium, Microsoft, GNU

# Formatting rules
IndentWidth:     4        # Number of spaces for indentation
TabWidth:        4        # Number of spaces per tab
UseTab:          Never    # Options: Always, Never, ForIndentation

# Brace formatting
BreakBeforeBraces: Attach # Options: Attach, Stroustrup, Allman, GNU, Linux, Custom

# Column and wrapping settings
ColumnLimit:     100      # Max line length before wrapping
AllowShortIfStatementsOnASingleLine: false

# Spaces
PointerAlignment: Left     # `int* ptr` instead of `int *ptr`
SpaceAfterCStyleCast: true
SpacesInParentheses: false
SpaceBeforeParens: ControlStatements  # Spaces before `if (...)`

# Namespace indentation
NamespaceIndentation: None # Options: None, Inner, All

# Structs & Classes
AccessModifierOffset: -4   # Indent `public:` and `private:` by 4 spaces
AlignConsecutiveAssignments: false
AlignConsecutiveDeclarations: false

# Function definitions
AlignTrailingComments: true
AllowAllParametersOfDeclarationOnNextLine: false
AllowShortFunctionsOnASingleLine: None

# Include sorting
IncludeBlocks: Regroup
SortIncludes: true

# Formatting for lambdas
AllowShortLambdasOnASingleLine: None

